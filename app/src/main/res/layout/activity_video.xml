<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VideoActivity">

    <include layout="@layout/activity_topbar" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fg_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <SurfaceView
                    android:id="@+id/surfaceview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorhalfwhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorWhite" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bg_surf1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/surfaceview_bg"
                    android:visibility="visible"></FrameLayout>
            </FrameLayout>

            <ImageView
                android:id="@+id/img_video1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

            <FrameLayout
                android:id="@+id/fg_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <SurfaceView
                    android:id="@+id/surfaceview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorhalfwhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/colorWhite" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bg_surf2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/surfaceview_bg"
                    android:visibility="gone">

                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_video3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fg_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <SurfaceView
                    android:id="@+id/surfaceview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorhalfwhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/colorWhite" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bg_surf3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/surfaceview_bg"
                    android:visibility="gone"></FrameLayout>
            </FrameLayout>

            <ImageView
                android:id="@+id/img_video2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

            <FrameLayout
                android:id="@+id/fg_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <SurfaceView
                    android:id="@+id/surfaceview4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorhalfwhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/colorWhite" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bg_surf4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/surfaceview_bg"
                    android:visibility="gone"></FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
